<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheet"
    style="@style/CustomCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/white"
    app:behavior_hideable="true"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <FrameLayout
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:clipToPadding="false"
        app:layout_behavior="android.support.design.widget.BottomSheetBehavior" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="100dp"
            android:layout_height="3dp"
            android:background="@color/mid_grey"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/txt_tgl_kehadiran"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/date_day"
                android:textSize="19sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/present"
                android:textColor="@color/green_pesantren"
                android:textSize="17sp"
                app:layout_constraintBottom_toBottomOf="@id/txt_tgl_kehadiran"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/txt_v_jamdatang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/jam_datang"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_tgl_kehadiran" />

            <TextView
                android:id="@+id/txt_v_jampulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/jam_pulang"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_v_jamdatang"
                app:layout_constraintTop_toBottomOf="@+id/txt_tgl_kehadiran" />

            <TextView
                android:id="@+id/txt_jam_datang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_smh"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_v_jamdatang" />

            <TextView
                android:id="@+id/txt_jam_pulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/time_smh"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/txt_v_jampulang"
                app:layout_constraintTop_toBottomOf="@+id/txt_v_jampulang" />

            <TextView
                android:id="@+id/txt_v_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/lokasi_datang"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_jam_datang" />

            <TextView
                android:id="@+id/txt_v_lokasipulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/lokasi_pulang"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_v_lokasi"
                app:layout_constraintTop_toBottomOf="@id/txt_jam_datang" />

            <TextView
                android:id="@+id/txt_lokasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_location"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_v_lokasi" />

            <TextView
                android:id="@+id/txt_lokasipulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name_location"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_v_lokasipulang"
                app:layout_constraintTop_toBottomOf="@id/txt_v_lokasipulang" />

            <TextView
                android:id="@+id/txt_v_catatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/catatan_datang"
                android:textSize="11sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_lokasi" />

            <TextView
                android:id="@+id/txt_v_catatanpulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="@string/catatan_pulang"
                android:textSize="11sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/txt_v_catatan"
                app:layout_constraintTop_toBottomOf="@id/txt_lokasi" />

            <TextView
                android:id="@+id/txt_catatan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/txt_v_catatan" />

            <TextView
                android:id="@+id/txt_catatanpulang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/note"
                android:textSize="11sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/txt_v_catatanpulang"
                app:layout_constraintTop_toBottomOf="@id/txt_v_catatanpulang" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>