<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/profileFragment">

    <action
        android:id="@+id/open_home_page"
        app:destination="@id/homeFragment" />

    <action
        android:id="@+id/open_home_lesson"
        app:destination="@+id/homeLessonFragment" />

    <action
        android:id="@+id/open_laporan_page"
        app:destination="@id/laporanFragment" />

    <action
        android:id="@+id/open_lesson_report"
        app:destination="@id/lessonReportFragment" />

    <action
        android:id="@+id/open_profile_page"
        app:destination="@id/profileFragment" />

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ekosp.indoweb.adminsekolah.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/homeLessonFragment"
        android:name="com.ekosp.indoweb.adminsekolah.ui.fragment.HomePelajaranFragment"
        android:label="fragment_home_lesson"
        tools:layout="@layout/fragment_home_pelajaran" />

    <fragment
        android:id="@+id/laporanFragment"
        android:name="com.ekosp.indoweb.adminsekolah.ui.fragment.LaporanFragment"
        android:label="fragment_laporan"
        tools:layout="@layout/fragment_laporan" />

    <fragment
        android:id="@+id/lessonReportFragment"
        android:name="com.ekosp.indoweb.adminsekolah.ui.fragment.LaporanPelajaranFragment"
        android:label="fragment_lesson_report"
        tools:layout="@layout/fragment_laporan_pelajaran" />

    <fragment
        android:id="@+id/profileFragment"
        android:name="com.ekosp.indoweb.adminsekolah.ui.fragment.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" />
</navigation>